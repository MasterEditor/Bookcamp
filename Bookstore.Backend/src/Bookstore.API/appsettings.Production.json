{
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Seq", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "https://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "WithExceptionDetails",
      "FromLogContext"
    ]
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb",
    "DatabaseName": "Bookstore"
  },
  "AllowedOrigins": [
    "frontend"
  ],
  "TokenSettings": {
    "Issuer": "backend",
    "Audience": "frontend",
    "JwtTokenLifetime": 25
  },
  "ImageSettings": {
    "ImageMaxSizeInBytes": 20971520,
    "BytesInMb": 1048576,
    "UploadPath": ".\\wwwroot\\images",
    "AllowedImageFormats": [
      "image/jpeg",
      "image/jpg",
      "image/gif",
      "image/png",
      "image/tiff"
    ]
  },
  "BookSettings": {
    "UploadPath": ".\\wwwroot\\books",
    "AllowedBookFormats": [
      "application/pdf",
      "application/epub",
      "text/plain",
      "application/fb2",
      "application/epub+zip"
    ]
  }
}
